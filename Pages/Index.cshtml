@page
@model IndexModel
@{
    ViewData["Title"] = "EncoreTrack";
}

<!--header -->
        <div class="text-center p-4" style="background-color: black;">
            <img src="~/images/logo.png" alt="EncoreTrack Logo" style="height: 80px;" />
            <h1 class="display-4" style="color: #FFD600;">EncoreTrack</h1>
            <p style="color: white;">Nonprofit Symphony Audience Tracker</p>
        </div>

<!--csettings-->

        <div class="container mt-5">
            <h2 class="mb-4" style="color: black;">Upcoming Concerts</h2>
            <div class="row">
                @foreach (var concert in Model.Concerts)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #FFD600;">@concert.ConcertName</h5>
                                <p class="card-text">
                                    <strong>Date:</strong> @concert.ConcertDate.ToString("MMMM d, yyyy")<br />
                                    <strong>Venue:</strong> @concert.Venue
                                </p>
                                <a asp-page="/AudienceMembers/Index" class="btn btn-dark">View Patrons</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
